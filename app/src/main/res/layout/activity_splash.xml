            android:text="0"
            android:textColor="#00BCD4"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/t7"
            android:width="100dp"
            android:height="70dp"
            android:gravity="center"
            android:text="x"
            android:textColor="#00BCD4"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/t8"
            android:width="100dp"
